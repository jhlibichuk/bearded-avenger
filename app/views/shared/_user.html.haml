.user
  %ul
    %li.current-user
      - if user_signed_in?
        .user-name.link
          = link_to current_user.name, "#"
        .sign-out.link
          = link_to "(Sign Out)", destroy_user_session_path, method: :delete
      -else
        .sign-in.link
          = link_to "Sign in with Facebook", user_omniauth_authorize_path(:facebook)
    %li.current-game
      = link_to "Current Game", games_path